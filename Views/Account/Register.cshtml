@model Clothing_Store.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<style>

    .bg-body-color {
        background-color: #12343b !important;
    }

</style>

<h2 class="text-center mb-4">Register</h2>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow p-3 mb-5 bg-body bg-body-color rounded">
            <div class="card-body">
                <form asp-action="Register">
                    <div class="mb-3">
                        <label asp-for="FirstName" class="form-label" style="color: white"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="LastName" class="form-label" style="color: white"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label" style="color: white"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Telephone" class="form-label" style="color: white"></label>
                        <input asp-for="Telephone" class="form-control" />
                        <span asp-validation-for="Telephone" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label" style="color: white"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label" style="color: white"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-outline-light">Register</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(document).ready(function () {
            var RegistrationMessage = '@(TempData["RegisterationMessage"] as string)';
            var RegistrationErrorMessage = '@(TempData["RegisterationErrorMessage"] as string)';

            if (RegistrationMessage) {
                Swal.fire({
                    title: 'Registration Successful!',
                    text: RegistrationMessage,
                    icon: 'success'
                }).then(function () {
                    var url = '@Url.Action("Login", "Account")';
                    window.location.href = url;
                });
            }

            if (RegistrationErrorMessage) {
                Swal.fire({
                    title: 'Registration error!',
                    text: RegistrationErrorMessage,
                    icon: 'error'
                }).then(function () {
                    var url = '@Url.Action("Register", "Account")';
                    window.location.href = url;
                });
            }
        });
    </script>
}
