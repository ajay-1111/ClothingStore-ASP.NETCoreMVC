@{
    ViewData["Title"] = "Home Page";
}

<!-- Custom CSS -->
<style>
        /* Ensure full-screen height */
    html, body {
        height: 100%;
    }

    /* Set carousel height */
    .carousel-item img {
        object-fit: cover;
        height: 80vh; /* Adjust as needed */
        width: 100%;
    }
</style>

<!-- Image carousel -->
<div id="carouselExampleInterval" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        <div class="carousel-item active" data-bs-interval="2000">
            <img src="Images/Slider_1.jpg" class="d-block w-100" alt="Slider_1">
        </div>
        <div class="carousel-item" data-bs-interval="2000">
            <img src="Images/Slider_2.jpg" class="d-block w-100" alt="Slider_2">
        </div>
        <div class="carousel-item">
            <img src="Images/Slider_3.jpg" class="d-block w-100" alt="Slider_3">
        </div>
    </div>
</div>