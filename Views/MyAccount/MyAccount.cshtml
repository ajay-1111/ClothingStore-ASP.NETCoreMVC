@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Clothing_Store.ViewModels.MyAccountViewModel

<h2 class="text-center mb-2" style="padding-top : 2em">My Account</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow p-3 mb-5 bg-body rounded">
                <div class="card-body">
                    <form asp-action="UpdateAccount" asp-controller="MyAccount" method="post">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label for="email">Email:</label>
                                    <input asp-for="Email" class="form-control" disabled readonly />
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="FirstName">First Name:</label>
                                    <input asp-for="FirstName" class="form-control" />
                                </div>
                                <div class="form-group mb-3">
                                    <label asp-for="LastName">Last Name:</label>
                                    <input asp-for="LastName" class="form-control" />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Telephone">Telephone:</label>
                                    <input asp-for="Telephone" class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="mb-2">
                            <button type="submit" class="btn btn-primary mb-2">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

